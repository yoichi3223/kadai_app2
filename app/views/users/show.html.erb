<h2>User info</h2>
    <table class='table'>
      <tr>
      	<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>

    	  <th>name</th>
    	  <td><%=@user.name%></td>
      </tr>
      <tr>
    	  <th>introduction</th>
    	  <td><%=@user.introduction%></td>
      </tr>
</table>
<%= link_to 'Edit',edit_user_path(@user) %>
<h2>New book</h2>
<%= form_for(@book) do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Opinion</p>
<%= f.text_area :body %>
<p><%= f.submit 'Create Book' %></p>
<% end %>
<table>
  <tr>
    <th>イメージ画像</th>
    <th>Title</th>
    <th>Opinion</th>
  </tr>
  <% @books.each do |book| %>
  <tr>
    <td><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></td>
    <td><%= book.title%></td>
    <td><%= book.body%></td>
  </tr>
  <% end %>
</table>