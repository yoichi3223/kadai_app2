
<div class ="container">
  <div class ="row">
    <div class ="col-1">
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
<h4>Name</h4>
  <%= f.text_field :title,class:"col-xs-6" %>
<h4>Opinion</h4>
  <%= f.text_area :body,class:"col-xs-6" %>
  <%= f.submit 'Update Book',class: "btn-primary" %>
  <%= link_to "Show",book_path(current_user.id)%>
  <%= link_to "Back",books_path %>
  <% end %>
  </div>
</div>
</div>